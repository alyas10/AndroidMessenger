<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_bkg"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:padding="8dp"
        android:text="Вам нужно выбрать для шифрования нужный шифр из списка и нажать кнопку 'Перейти', чтобы зашифровать текст."
        android:textColor="@color/green"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textViewDescription"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:contextClickable="true"
        android:dropDownWidth="wrap_content"
        android:dropDownSelector="@drawable/arrow_message"
        android:scrollbarSize="12dp"
        android:textAlignment="center"
        android:verticalScrollbarPosition="left" />

    <Button
        android:id="@+id/button_go"
        android:layout_width="173dp"
        android:layout_height="70dp"
        android:layout_below="@id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:backgroundTint="@color/green"
        android:textColor="@color/black"
        android:text="Перейти" />

    <ImageView
        android:layout_width="368dp"
        android:layout_height="205dp"
        android:layout_below="@id/button_go"
        android:layout_marginTop="10dp"
        android:src="@drawable/shifr" />
</RelativeLayout>
